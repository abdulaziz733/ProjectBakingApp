<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recipe_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:background="@color/md_white_1000"
    android:backgroundTint="@color/md_yellow_200"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical">

        <com.projectbakingapp.utils.CustomTextView
            android:id="@+id/recipe_name_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/md_grey_700"
            android:textSize="18sp"
            app:font="RobotoCondensed-Bold.ttf"
            tools:ignore="SpUsage"
            tools:text="Recipe Name" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimaryDark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:padding="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/recipe_step_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rect"
                android:gravity="center"
                android:text="@string/step"
                android:textColor="#ffffff"
                android:textSize="14dp"
                android:layout_weight="1"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/recipe_ingredients_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rect1"
                android:gravity="center"
                android:text="@string/ingredients"
                android:textColor="#ffffff"
                android:textSize="14dp"
                android:layout_weight="1"
                android:textStyle="bold" />

        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>
